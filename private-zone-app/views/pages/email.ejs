            async function shareEmail() {
                if (!currentEmail) return;

                const emailContent = `Check out this email: "${currentEmail.subject}" from ${currentEmail.sender_email}`;

                if (navigator.share) {
                    try {
                        await navigator.share({
                            title: currentEmail.subject,
                            text: emailContent,

        </div>

        <!-- Email Filters -->
        <div class="card mb-4 shadow-sm border-0">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <select class="form-select" id="emailFilter" onchange="filterEmails()">

                window.showAlert('Event created successfully!', 'success');
            } else {
                alert('Event created successfully!');
            }
            
            // Reload events if function exists
            if (typeof window.loadGoogleCalendarEvents === 'function') {
                window.loadGoogleCalendarEvents();
            } else {
                location.reload();
            }
        } else {
            let errorMessage = 'Error creating event: ' + data.error;
            
                            // Check if it's a permission error
                            if (data.error && (data.error.includes('permission') || data.error.includes('scope') || data.error.includes('forbidden'))) {
                                errorMessage += '<br><br>You may need to re-authorize with calendar write permissions. <button type="button" class="btn btn-warning btn-sm mt-2" onclick="window.reauthorizeCalendar()">Re-authorize Now</button>';
                            }            if (typeof window.showAlert === 'function') {
